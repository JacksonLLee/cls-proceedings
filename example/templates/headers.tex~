\documentclass[twoside, 12pt]{article}
% Using "twoside" as we are printing a book where the page numbers appear
% at the left and right corners alternatingly. To achieve this effect,
% we are using the fancyhdr package.

% adjust the margin if necessary
\usepackage[letterpaper, left=1.5in,top=1.25in,right=1.5in,bottom=1.25in]{geometry}

\usepackage{times}
\usepackage{fancyhdr}
\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt} % we do not want a horizontal rule at headers

% Everything enclosed by double X's (in the form of XX...XX) is to be filled
% in by the compile.py script. Don't change them!

\fancyhf{}
\cleardoublepage
\setcounter{page}{XXStartPageXX}
\fancyhead[LE]{\footnotesize \thepage}  % LE = left, even
\fancyhead[RO]{\footnotesize \thepage}  % RO = right, odd

\fancyhead[CE]{\footnotesize XXAuthorsXX}  % C = center
\fancyhead[CO]{\footnotesize XXTitleXX}

\begin{document}

\fancypagestyle{firststyle}
{
\fancyhf{}
\fancyhead[RO]{\thepage}

% This is the paper header for CLS 48 (conference was in 2012, proceedings
% published in 2014). 
\fancyhead[L]{\footnotesize Proceedings of CLS 48 (2012), XXPageRangeXX \\
{\copyright} Chicago Linguistic Society 2014. All rights reserved.}
}

% Using the "thispagestyle" command creates the "Proceedings of CLS..." header
% only on the very first page of a paper.
\thispagestyle{firststyle}

\mbox{}

XXInsertPagesXX

\end{document}

